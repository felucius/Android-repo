<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dip">

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/recipeImageText"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/recipeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:id="@+id/recipeName"
        android:layout_toRightOf="@+id/recipeImageText"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="6dip">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:text="@string/txtAmountOfPersons"
        android:layout_width="wrap_content"
        android:id="@+id/recipeAmountOfPersonsText"
        android:layout_toRightOf="@+id/recipeImageText"
        android:layout_below="@+id/recipeName"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="6dip">
    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_width="wrap_content"
        android:id="@+id/recipeAmountOfPersons"
        android:layout_toRightOf="@+id/recipeAmountOfPersonsText"
        android:layout_below="@+id/recipeName"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="6dip">
    </TextView>

</RelativeLayout>